mixin crearProyecto(proyecto= {})
    form.agregar-proyecto(action=`/nuevo-proyecto/${proyecto.id || ''}` method="POST")
        .campo 
            label(for="nombre") Nombre proyecto
            input(type="text" value=proyecto.nombre name="nombre" id="nombre" placeholder="Nombre Proyecto")
        .campo.enviar
            input(type="submit" value=`${proyecto.nombre ? 'Editar' : 'Agregar'}` class="boton") 